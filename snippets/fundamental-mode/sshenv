# -*- mode: snippet -*-
# name: sshenv
# key: sshenv
# --

(setq $1 "/ssh:root@$2")
(add-to-list 'tramp-default-proxies-alist '("$3" "root" "/ssh:root@$4#22:"))
(defun sshenv-$1()
    (interactive)
    (let ((default-directory $1))
      (vterm)))
(defun direnv-$1()
    (interactive)
    (dired $1))